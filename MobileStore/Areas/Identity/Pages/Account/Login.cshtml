@page
@model EShope.Areas.Identity.Pages.Account.LoginModel

@{
    Layout = null; // یا "_Layout" اگر می‌خواهی از Layout استفاده شود
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center bg-light">
        <div class="row w-100">
            <div class="col-md-7 d-flex flex-column align-items-center justify-content-center" style="background-color: #7393B3; height: 100vh;">
                <img src="~/Images/shopping-cart.png" alt="Logo" class="mb-4" style="width: 200px; height: auto;" />
                <h2 class="text-white">Welcome Back!</h2>
                <p class="text-center text-white">Manage your account, access personalized content, and enjoy exclusive features.</p>
            </div>

            <div class="col-12 col-md-5 d-flex align-items-center justify-content-center vh-100 px-0 m-0">
                <div class="text-center bg-white w-100 h-100 d-flex flex-column justify-content-center p-4">
                    <div class="login-icon mb-2">
                        <i class="bi bi-people-fill fs-1 text-primary"></i>
                    </div>
                    <h4>Login</h4>

                    @* فرم با tag-helper و antiforgery *@
                    <form method="post" class="w-100">
                        @Html.AntiForgeryToken()

                        <div class="m-3">
                            <label asp-for="Input.Username" class="form-label d-block text-start"></label>
                            <div class="input-group">
                                <input asp-for="Input.Username" class="form-control" />
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                            </div>
                            <span asp-validation-for="Input.Username" class="text-danger"></span>
                        </div>

                        <div class="m-3">
                            <label asp-for="Input.Password" class="form-label d-block text-start"></label>
                            <div class="input-group">
                                <input asp-for="Input.Password" type="password" class="form-control" />
                                <span class="input-group-text">
                                    <i class="bi bi-eye-slash" id="toggle-password" style="cursor: pointer;"></i>
                                </span>
                            </div>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="d-grid m-3">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                        {
                            <div class="alert alert-danger mt-2">@Model.ErrorMessage</div>
                        }

                        <p>Don't have an account? <a asp-area="Identity" asp-page="/Account/Register" class="text-primary">Register</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const toggle = document.getElementById('toggle-password');
        if (toggle) {
            toggle.addEventListener('click', function () {
                const pwd = document.getElementById('Input_Password');
                if (!pwd) return;
                if (pwd.type === 'password') {
                    pwd.type = 'text';
                    toggle.classList.remove('bi-eye-slash'); toggle.classList.add('bi-eye');
                } else {
                    pwd.type = 'password';
                    toggle.classList.remove('bi-eye'); toggle.classList.add('bi-eye-slash');
                }
            });
        }
    </script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
