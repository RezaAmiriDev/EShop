@page
@model EShope.Pages.Seller.UpdateModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "ویرایش فروشنده";
}

<div class="container py-4">
    <h3 class="mb-3">ویرایش فروشنده</h3>

    <form method="post" class="needs-validation" novalidate>
        <input asp-for="Seller.Id" type="hidden" />

        <div class="mb-3">
            <label asp-for="Seller.SellerName" class="form-label">نام فروشنده</label>
            <input asp-for="Seller.SellerName" class="form-control" />
            <span asp-validation-for="Seller.SellerName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Seller.SellerDescription" class="form-label">توضیحات</label>
            <textarea asp-for="Seller.SellerDescription" class="form-control" rows="4"></textarea>
            <span asp-validation-for="Seller.SellerDescription" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Seller.NationalCode" class="form-label">کد ملی</label>
            <input asp-for="Seller.NationalCode" class="form-control" />
            <span asp-validation-for="Seller.NationalCode" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Seller.AddressId" class="form-label">آدرس (AddressId)</label>
            <input asp-for="Seller.AddressId" class="form-control" />
            <span asp-validation-for="Seller.AddressId" class="text-danger"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">ذخیره</button>
            <a asp-page="./Index" class="btn btn-secondary">انصراف</a>
        </div>

        <div class="mt-3">
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    لطفا خطاهای فرم را اصلاح کنید.
                </div>
            }
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

